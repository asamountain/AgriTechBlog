{
  "version": 2,
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/assets/(.*\\.js)$",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/assets/(.*\\.css)$",
      "dest": "/assets/$1", 
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}