{
  "rewrites": [
    {
      "source": "/api/rss.xml",
      "destination": "/api/feed?type=rss"
    },
    {
      "source": "/api/sitemap.xml",
      "destination": "/api/feed?type=sitemap"
    },
    {
      "source": "/api/blog-posts/featured",
      "destination": "/api/posts?featured=true"
    },
    {
      "source": "/api/blog-posts",
      "destination": "/api/posts"
    },
    {
      "source": "/api/blog-post",
      "destination": "/api/posts"
    },
    {
      "source": "/api/blog-post-meta",
      "destination": "/api/meta"
    },
    {
      "source": "/api/blog-post-ssr",
      "destination": "/api/meta"
    },
    {
      "source": "/api/notion-sync/list-pages",
      "destination": "/api/notion-sync/pages"
    },
    {
      "source": "/api/notion-sync/test",
      "destination": "/api/notion-sync/pages?test=true"
    },
    {
      "source": "/api/blog-posts/:postId/inline-comments/:annotationId/like",
      "destination": "/api/admin/inline-comments?postId=:postId&annotationId=:annotationId&action=like"
    },
    {
      "source": "/api/blog-posts/:postId/inline-comments",
      "destination": "/api/admin/inline-comments?postId=:postId"
    },
    {
      "source": "/api/blog-posts/:id/related",
      "destination": "/api/posts?relatedTo=:id"
    },
    {
      "source": "/api/admin/blog-posts/:id",
      "destination": "/api/admin/blog-posts?id=:id"
    },
    {
      "source": "/api/admin/upload-image/:publicId",
      "destination": "/api/admin/upload-image?publicId=:publicId"
    },
    {
      "source": "/",
      "destination": "/api/meta?type=home"
    },
    {
      "source": "/posts",
      "destination": "/api/meta?type=posts"
    },
    {
      "source": "/portfolio",
      "destination": "/api/meta?type=portfolio"
    },
    {
      "source": "/portfolio/:slug",
      "destination": "/api/meta?type=portfolio&slug=:slug"
    },
    {
      "source": "/blog/:slug",
      "destination": "/api/meta?type=blog&slug=:slug"
    },
    {
      "source": "/((?!api|sitemap.*\\.xml|rss\\.xml|robots\\.txt).*)",
      "destination": "/index.html"
    }
  ]
}