# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
MONGODB_DATABASE=blog_database

# Alternative: Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/blog_database



# Session Security
SESSION_SECRET=your-super-secret-session-key-change-this-immediately

# Authentication (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Environment
NODE_ENV=development
PORT=3000

# Security Settings
BCRYPT_ROUNDS=12

# Analytics (Optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Notion Integration (for syncing blog posts from Notion)
NOTION_TOKEN=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
DEFAULT_USER_ID=notion-sync

# Notion Journal Import (for bulk importing Markdown journal entries)
NOTION_JOURNAL_DB_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
JOURNAL_ROOT_PATH=./Journal 

# Cloudinary (for image uploads in the admin panel)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Groq AI Polisher (for content polishing with Llama models)
POLISHER_API_KEY=your-groq-api-key
POLISHER_MODEL=llama-3.3-70b-versatile